
meteor run --settings config/settings.json

meteor run android-device

meteor build /tmp --architecture os.linux.x86_64 --server ronin.trychlos.org
    scp /tmp/ronin.tar.gz www8:/home/ronin
    ssh www8 'systemctl stop ronin; cd /home/ronin; rm -f bundle; tar -xzvf ronin.tar.gz; chown -R ronin:ronin bundle; tmpd="$(date +'%y%m%d')"; mv bundle bundle-$tmpd; ln -s bundle-$tmpd bundle; systemctl start ronin'

